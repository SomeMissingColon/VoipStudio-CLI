# VStudio CLI CRM Environment Configuration

# Database Settings
USE_MONGODB=false
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=vstudio_crm

# MongoDB Atlas (Cloud) Example
# USE_MONGODB=true
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
# DATABASE_NAME=vstudio_crm

# VoIP Studio API Settings
VOIPSTUDIO_API_TOKEN=your_api_token_here
VOIPSTUDIO_API_URL=https://l7api.com/v1.2/voipstudio

# Google Calendar Integration
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_FILE=token.json

# Application Settings
CSV_BACKUP_ENABLED=true
AUTO_MIGRATE_CSV=true
TIMEZONE=America/New_York

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=false

# Data Export
EXPORT_FORMAT=csv
EXPORT_PATH=./exports/

# Priority Scoring Weights (0.0 to 1.0)
URGENCY_WEIGHT=0.4
RECENCY_WEIGHT=0.3
QUALITY_WEIGHT=0.2
MANUAL_WEIGHT=0.1